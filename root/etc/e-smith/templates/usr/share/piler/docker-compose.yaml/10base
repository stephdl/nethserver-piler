{
use NethServer::Password;
my $MysqlRootPassword = NethServer::Password::store('PilerMysqlRootPassword') || die('Could not generate PilerMysqlRootPassword password!');
my $MysqlPilerPassword = NethServer::Password::store('PilerMysqlUserPassword') || die('Could not generate PilerMysqlUserPassword password!');

$OUT .= qq(
version: "3"
services:

  mysql:
    image: mariadb:10.4
    restart: unless-stopped
    cap_drop:
      - ALL
    cap_add:
      - dac_override
      - setuid
      - setgid
    environment:
      - MYSQL_ROOT_PASSWORD=$MysqlRootPassword
    volumes:
      - db_data:/var/lib/mysql
    networks:
      default:
        ipv4_address: 172.28.101.2
  memcached:
    image: memcached:latest
    restart: unless-stopped
    cap_drop:
      - ALL
    command: -m 64
    networks:
      default:
        ipv4_address: 172.28.101.3

  piler:
    image: sutoj/piler:1.3.10
    init: true
    environment:
      - MYSQL_PILER_PASSWORD=$MysqlPilerPassword
      - MYSQL_ROOT_PASSWORD=$MysqlRootPassword
      - MYSQL_HOSTNAME=mysql
      - PILER_HOSTNAME=piler.$DomainName
      - MEMCACHED_HOST=memcached
    volumes:
      - piler_etc:/etc/piler
      - piler_var:/var/piler
    healthcheck:
      test: curl -s smtp://localhost/
      interval: "60s"
      timeout: "3s"
      start_period: "15s"
      retries: 3
    deploy:
      resources:
        reservations:
          memory: 512M
        limits:
          memory: 512M
    networks:
      default:
        ipv4_address: 172.28.101.4
    depends_on:
      - "memcached"
      - "mysql"

volumes:
  db_data: \{\}
  piler_etc: \{\}
  piler_var: \{\}

networks:
  default:
    external:
      name: aqua
);
}
